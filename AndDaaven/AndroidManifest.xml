<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	      package="com.saraandshmuel.anddaaven"
	      android:versionCode="32" android:versionName="dyntext 1"
	      android:installLocation="auto">
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher_anddaaven" android:name="AndDaavenCrashReporting">
        <activity android:name=".AndDaavenSplash"
                  android:label="@string/app_name" 
                  android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

	    <activity android:name="AndDaavenTefilla" 
	    		  android:label="@string/app_name" 
	    		  android:theme="@android:style/Theme.Light" 
	    		  android:configChanges="keyboardHidden"/>

	    <activity android:name="AndDaavenSettings" 
	    		  android:label="@string/app_name"/>
		<activity android:name="org.acra.CrashReportDialog"
			      android:theme="@android:style/Theme.Dialog"
			      android:launchMode="singleInstance"
			      android:excludeFromRecents="true"
			      android:finishOnTaskLaunch="true" />
	    		  
	</application>
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4"/>
    
    <supports-screens android:largeScreens="true" android:anyDensity="true" />
    
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 