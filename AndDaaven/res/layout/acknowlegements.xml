<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" 
    		  android:layout_height="fill_parent" 
	          android:orientation="vertical"
    		  xmlns:android="http://schemas.android.com/apk/res/android" 
    		  android:id="@+id/LinearLayoutAcknowledgement">
	<TextView android:id="@+id/VersionAcknowledgement"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Version..."
		android:textSize="35sp"
		android:gravity="center"/>
    <ScrollView android:id="@+id/ScrollViewAcknowledgement"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:scrollbars="vertical"
    			android:fillViewport="true">
    	<TextView android:id="@+id/TextViewAcknowledgement" 
	    	  android:text="@string/TextViewAcknowledgement" 
	    	  android:layout_height="fill_parent" 
	    	  android:layout_width="fill_parent"
	    	  android:layout_weight="1.0"/>
   	</ScrollView>
</LinearLayout>
